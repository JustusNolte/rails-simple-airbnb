<%= form_with model: @flat, local: true do |form| %>
  <% if @flat.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@flat.errors.count, "error") %> prohibited this flat from being saved:</h4>
      <ul>
        <% @flat.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", autofocus: true %>
  </div>

  <div class="mb-3">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :price_per_night, class: "form-label" %>
    <%= form.number_field :price_per_night, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :number_of_guests, class: "form-label" %>
    <%= form.number_field :number_of_guests, class: "form-control" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
  <%= link_to 'Back', flats_path, class: "btn btn-secondary" %>
<% end %>
